<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--  Focused  -->
    <item android:state_focused="true" >
        <shape android:shape="rectangle">
            <stroke android:color="@color/focused_black" android:width="1dp"/>
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!--  Pressed  -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/pressed_black" android:width="1dp"/>
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!--  Disabled  -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/disabled_black" android:width="1dp"/>
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!--  Default  -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/normal_black" android:width="1dp"/>
            <corners android:radius="6dp" />
        </shape>
    </item>

</selector>